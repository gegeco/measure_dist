# Makefile for python interface for package measure_dist.
# File is generated by gopy. Do not edit.
# gopy build -output=measure_dist -vm=python3 .

GOCMD=go
GOBUILD=$(GOCMD) build -mod=mod
GOIMPORTS=goimports
PYTHON=/usr/bin/python3
LIBEXT=.so

# get the CC and flags used to build python:
GCC = $(shell $(GOCMD) env CC)
CFLAGS = -I/usr/include/python3.10
LDFLAGS = -L/usr/lib/x86_64-linux-gnu -lpython3.10 -lcrypt -ldl  -lm -lm

all: gen build

gen:
	gopy gen -no-make -vm=python3 .

build:
	# build target builds the generated files -- this is what gopy build does..
	# this will otherwise be built during go build and may be out of date
	- rm measure_dist.c
	# goimports is needed to ensure that the imports list is valid
	$(GOIMPORTS) -w measure_dist.go
	# generate measure_dist_go$(LIBEXT) from measure_dist.go -- the cgo wrappers to go functions
	$(GOBUILD) -buildmode=c-shared -o measure_dist_go$(LIBEXT) measure_dist.go
	# use pybindgen to build the measure_dist.c file which are the CPython wrappers to cgo wrappers..
	# note: pip install pybindgen to get pybindgen if this fails
	$(PYTHON) build.py
	# build the _measure_dist$(LIBEXT) library that contains the cgo and CPython wrappers
	# generated measure_dist.py python wrapper imports this c-code package
	
	$(GCC) measure_dist.c  measure_dist_go$(LIBEXT) -o _measure_dist$(LIBEXT) $(CFLAGS) $(LDFLAGS) -fPIC --shared -w
	


